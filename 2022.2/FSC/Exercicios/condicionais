.data
	msg: .asciiz "Forneça um numero"
	msgpar: .asciiz "O número é par"
	ímpar: .asciiz"o numero é impar"

.text
	#imprime a mensagem
	li $v0,4
	la $a0,msg
	syscall
	
	#le o número 
	li $v0,5
	syscall
	
	#divide o numero 
	move $t1,$v0
	
	li $t0,2
	div $t1,$t0
	mfhi $t2
	
	beq $t2,$zero,par
	bne $t2,$zero,impar
	
	
	par:
		li $v0,4
		la $a0,msgpar
		syscall
		
		li $v0,10
		syscall
	impar:
		li $v0,4
		la $a0,ímpar
		syscall